{% extends 'index_react.jinja2' %}

{% block meta_tags_public %}
{% endblock %}

{% block main_css %}
  <link type="text/css" rel="stylesheet" href="{{REACT_URL}}/build/theme_{{theme_name}}_web.css" />
{% endblock %}

{% block body %}
    <body>
        <table id="main-table">
            <tr>
                <td id="td-space" style="width: auto">
                </td>
                <td id="td-text" style="width: 30%">
                    {% if error %}
                        <h2 id="title-error">{{error}}</h2>
                    {% endif %}
                    {% if error_code %}
                        <h1 id="title-error-code">{{error_code}}</h1>
                    {% else %}
                        <h1 id="title-error-code">2</h1>
                    {% endif %}
                    {% if text %}
                        <p class="text">{{text}}</p>
                    {% endif %}
                    {% if excuse %}
                        <p class="text" id="excuse">{{excuse}}</p>
                    {% endif %}
                    {% if debate_link %}
                        <button onclick="location.href='{{debate_link}}'">
                        {% if home_button %}
                            {{home_button}}
                        {% endif %}
                        </button>
                    {% endif %}
                </td>
                <td id="td-img" style="width: 50%">
                    <img id="server-image" src="/static2/img/Erreur500-illustration.png" />
                </td>
            </tr>
        </table>

        {% block main_js %}
            {% include 'analytics_common.jinja2' %}
            {% if NODE_ENV == 'development' %}
                <script src="{{REACT_URL}}/build/theme_{{theme_name}}_web.js"></script>
            {% endif %}
        {% endblock %}

        {% block for_testing %}
            {% if under_test %}
                <div id="under-test" class="hidden">V2</div>
            {%- endif %}
        {% endblock %}
    </body>
{% endblock%}
